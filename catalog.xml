---
layout: none
---

<?xml version="1.0" encoding="UTF-8"?>
{% capture base_url %}{{ site.url }}{% endcapture %}
<listings>
  <title>{{ site.title | xml_escape }}</title>
  <description>{{ site.tagline | xml_escape }}</description>
  <link rel="self" href="{{ base_url }}" />
  {% for post in site.posts limit:10 %}
  {% capture post_id %}{{ post.url | remove: '-' | remove: '/' }}{% endcapture %}
  <listing>
    <media_title_id>{{ post_id }}</media_title_id>
    <title>{{ post.title | xml_escape }}</title>
    <description>{{ post.excerpt | xml_escape }}</description>
    <media_source>original</media_source>
    <url>{{ base_url }}{{ post.url }}</url>
    <image>
      <url>{% if post.image %}{{ post.image }}{% else %}{{ base_url }}/images/default.png{% endif %}</url>
      <tag>{{ post_id }}</tag>
    </image>
  </listing>
  {% endfor %}
</listings>
